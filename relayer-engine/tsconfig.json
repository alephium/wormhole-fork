{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2021"],
    "declaration": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "lib/**/*",
    "**/__tests__/*",
    "src/**/*.test.ts"
  ]
}
