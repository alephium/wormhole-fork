{
  "name": "alephium-wormhole-contracts",
  "version": "0.0.0",
  "license": "GPL",
  "type": "commonjs",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint . --fix --ext ts",
    "build": "rm -rf dist && npx tsc --build .",
    "compile": "npx @alephium/cli compile",
    "codegen": "npx @alephium/cli compile && cp -r artifacts/. ../sdk/js/src/alephium-contracts",
    "test": "npx @alephium/cli test -i -v",
    "deploy:devnet": "npx @alephium/cli deploy -n devnet",
    "auto-mine": "npx ts-node scripts/auto_mine.ts",
    "create_local_token_pool": "npx ts-node scripts/create_local_token_pool.ts"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "bracketSameLine": false,
    "trailingComma": "none"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "@alephium/web3": "^0.18.2",
    "@alephium/web3-wallet": "^0.18.2",
    "@alephium/web3-test": "^0.18.2",
    "@alephium/cli": "^0.18.2",
    "@types/elliptic": "^6.4.14",
    "blakejs": "^1.2.1",
    "bs58": "^5.0.0",
    "commander": "^9.4.0",
    "eslint": "^7.32.0",
    "ethers": "5.4.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.5.0",
    "jest": "^28.1.0",
    "@types/jest": "^27.5.1",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.3"
  }
}
