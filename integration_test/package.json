    "axios": "^1.1.3",
    "bs58": "^5.0.0",
    "dockerode": "^3.3.4",
    "eslint": "^7.32.0",
    "ethers": "^5.6.8",
    "web3": "^1.7.1"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.12",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "eslint-config-prettier": "^8.5.0",
